<option type='enum' id='Brother-PTQL-Align'>
  <comments>
    <en>Horizontal alignment of pixel data sent to the printer when
    pixel data is more narrow than the maximum print width.
    This is usually fixed for any one printer, based on how the tape
    is mounted in the printer.
    </en> 
  </comments>
  <arg_longname>
    <en>Align</en>
  </arg_longname>
  <arg_shortname>
    <en>Align</en><!-- backends only know <en> shortnames! -->
  </arg_shortname>
  <arg_execution>
    <arg_group>PrinterSpecifics</arg_group>
    <arg_order>100</arg_order>
    <arg_spot>B</arg_spot>
    <arg_substitution />
    <arg_proto> Align=%s </arg_proto>
  </arg_execution>
  <constraints>
    <constraint sense='true'>
      <driver>ptouch-ql</driver>
      <arg_defval>ev/Right</arg_defval>
    </constraint>
    <constraint sense='true'>
      <driver>ptouch-pt</driver>
      <arg_defval>ev/Center</arg_defval>
    </constraint>
    <constraint sense='true'>
      <driver>ptouch-pt</driver>
      <printer>printer/Brother-PT-PC</printer><!-- Brother P-touch PT-PC -->
      <arg_defval>ev/Right</arg_defval>
    </constraint>
  </constraints>
  <enum_vals>
   <enum_val id="ev/Right">
    <ev_longname>
     <en>Right aligned</en>
    </ev_longname>
    <!-- A multilingual <comments> block can appear here, too;
         it should be treated as documentation for the user. -->
    <ev_shortname>
     <en>Right</en>
     <!-- Until someone tells me how to learn the user locale in 
          backends, the shortname must be monolingual in <en>! -->
    </ev_shortname>
    <ev_driverval>Right</ev_driverval>
   </enum_val>
   <enum_val id="ev/Center">
    <ev_longname>
     <en>Center aligned</en>
    </ev_longname>
    <!-- A multilingual <comments> block can appear here, too;
         it should be treated as documentation for the user. -->
    <ev_shortname>
     <en>Center</en>
     <!-- Until someone tells me how to learn the user locale in 
          backends, the shortname must be monolingual in <en>! -->
    </ev_shortname>
    <ev_driverval>Center</ev_driverval>
   </enum_val>
  </enum_vals>
</option>
